<div class="pageTitle">
  <h1>New <%= @dishwasher.title %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a class="cancel" href="<%= url_for :action => :index %>">Cancel</a>
  </div>
</div>

<div class="content">
  <form method="POST" action="<%= url_for :action => :create %>">
    <input type="hidden" name="id" value="<%= @dishwasher.object %>"/>
    <ul>

          <li>
            <label for="dishwasher[name]" class="fieldLabel">Name</label>
            <input type="text" name="dishwasher[name]" <%=
            placeholder("Name") %> />
          </li>

    </ul>
    <input type="hidden" name="dishwasher[status]" value="dirty"/>
    <input type="submit" class="standardButton" value="Add"/>
  </form>
</div>