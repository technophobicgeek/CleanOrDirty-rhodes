<div class="pageTitle">
  <h1>Edit <%= @dishwasher.code %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a href="<%= url_for :action => :show, :id => @dishwasher.object %>">Cancel</a>
  </div>
  <div class="rightItem regularButton">
    <a class="button" href="<%= url_for :action => :delete, :id => @dishwasher.object %>">Delete</a>
  </div>
</div>

<div class="content">
  <form method="POST" action="<%= url_for :action => :update %>">
    <input type="hidden" name="id" value="<%= @dishwasher.object %>"/>
    <ul>

          <li>
            <label for="dishwasher[name]" class="fieldLabel">Name</label>
            <input type="text" name="dishwasher[name]" value="<%= @dishwasher.name %>" <%= placeholder( "Name" ) %> />
          </li>

    </ul>
    <input type="submit" class="standardButton" value="Update"/>
  </form>
</div>