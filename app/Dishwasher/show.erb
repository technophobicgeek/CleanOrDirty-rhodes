<div class="pageTitle">
  <h1><%= @dishwasher.code %></h1>
</div>

<!--
Requirement:
* Show two large buttons, clean and dirty
* Set default status to dirty if no status set
-->


<div class="toolbar">
      <div class="centerItem"><h1><%= @dishwasher.name %></h1></div>
</div>


<div class="custom">
  <span class="status">
    <%= @dishwasher.status %>
  </span>
</div>

<div class="toolbar">
    <div class="centerItem regularButton">
      <a href="<%=url_for :action => :change_status, :id => @dishwasher.object %>">Change</a>
    </div>
</div>

